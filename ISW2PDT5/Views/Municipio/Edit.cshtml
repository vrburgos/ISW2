@model ISW2PDT5.municipio

@{
    ViewBag.Title = "Edit";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Editar Municipio
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <div class="form-group">
                    <div class="editor-label">
                        ID del municipio
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.id_municipio)
                        @Html.ValidationMessageFor(model => model.id_municipio)
                    </div>
                </div>

                <div class="form-group">
                    <div class="editor-label">
                        Nombre del Municipio
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.mun_nom)
                        @Html.ValidationMessageFor(model => model.mun_nom)
                    </div>
                </div>

                <div class="form-group">
                    <div class="editor-label">
                        Nombre del Departamento
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("DEPARTAMENTO_id_departamento", String.Empty)
                        @Html.ValidationMessageFor(model => model.DEPARTAMENTO_id_departamento)
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <div class="btn btn-default">
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
