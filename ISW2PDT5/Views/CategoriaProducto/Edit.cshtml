@model ISW2PDT5.categoria_producto

@{
    ViewBag.Title = "Edit";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Editar Categoria de Producto
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.id_categoria_producto)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.id_categoria_producto)
                        @Html.ValidationMessageFor(model => model.id_categoria_producto)
                    </div>
                </div>

                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.cat_descripcion)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.cat_descripcion)
                        @Html.ValidationMessageFor(model => model.cat_descripcion)
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <div class="btn btn-default">
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
