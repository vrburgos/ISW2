@model ISW2PDT5.categoria_producto

@{
    ViewBag.Title = "Create";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Crear Categoria de Producto
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="container">
                <fieldset>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.id_categoria_producto)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.id_categoria_producto)
                                @Html.ValidationMessageFor(model => model.id_categoria_producto)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-4">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.cat_descripcion)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.cat_descripcion)
                                @Html.ValidationMessageFor(model => model.cat_descripcion)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-lg-4">
                            <input type="submit" class="btn btn-primary" value="Crear" />
                            <div class="btn btn-default">
                                @Html.ActionLink("Regresar", "Index")
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
