@model ISW2PDT5.departamento

@{
    ViewBag.Title = "Edit";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Editar Departamento
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <div class="form-group">
                    <div class="editor-label">
                        ID del departamento
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.id_departamento)
                        @Html.ValidationMessageFor(model => model.id_departamento)
                    </div>
                </div>

                <div class="form-group">
                    <div class="editor-label">
                        Nombre del Departamento
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.dep_nombre)
                        @Html.ValidationMessageFor(model => model.dep_nombre)
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary"/>
                    <div class="btn btn-default">
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
