@model ISW2PDT5.departamento

@{
    ViewBag.Title = "Crear";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title">
            Crear Departamento
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
    <div class="container">
        <fieldset>
            <div class="row">
                <div class="form-group col-lg-4">
                    <div class="editor-label">
                        ID del departamento
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.id_departamento)
                        @Html.ValidationMessageFor(model => model.id_departamento)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-4">
                    <div class="editor-label">
                        Nombre del Departamento
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.dep_nombre)
                        @Html.ValidationMessageFor(model => model.dep_nombre)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-4">
                    <input type="submit" class="btn btn-primary" value="Crear" />
                    <div class="btn btn-default">
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
        }
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
