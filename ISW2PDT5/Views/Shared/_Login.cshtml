<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>GASISW - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.css" />
    @*<link type="text/css" rel="stylesheet" href="~/Content/footable.core.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/footable.standalone.css" />*@
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="text-primary">SISTEMA DE CONTROL DE INVENTARIO Y FACTURACIÓN PARA ESTACIÓN DE SERVICIO EN DESPACHO DE COMBUSTIBLE Y TIENDA DE PRODUCTOS</h1>
            </div>
        </div>
        <div class="row">
                @RenderBody()
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <footer>Universidad Francisco Gavidia | Ingenieria del Software 2 | Grupo 1 | 2015</footer>
            </div>
        </div>
    </div>   

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
